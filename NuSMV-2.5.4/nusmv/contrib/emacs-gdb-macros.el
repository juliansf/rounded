;; BeDumpSexpr(be_mgr, ..., nusmv_stderr)
(fset 'pbe
   [?c ?a ?l ?l ?  ?B ?e ?D ?u ?m ?p ?S ?e ?x ?p ?r ?\( ?b ?e ?_ ?m ?g ?r ?, ?  ?, ?n ?u ?s ?m ?v ?_ ?s ?t ?d ?e ?r ?r ?\) left left left left left left left left left left left left left left])

;; BeDumpSexpr(be_mgr, ..., nusmv_stdout)
(fset 'pbo
   [?c ?a ?l ?l ?  ?B ?e ?D ?u ?m ?p ?S ?e ?x ?p ?r ?\( ?b ?e ?_ ?m ?g ?r ?, ?  ?, ?n ?u ?s ?m ?v ?_ ?s ?t ?d ?o ?u ?t ?\) left left left left left left left left left left left left left left])

;; print_node(nusmv_stderr, ...)
(fset 'pne
   [?c ?a ?l ?l ?  ?p ?r ?i ?n ?t ?_ ?n ?o ?d ?e ?\( ?n ?u ?s ?m ?v ?_ ?s ?t ?d ?e ?r ?r ?, ?  ?\) left])

;; print_sexp(nusmv_stderr, ...)
(fset 'pse
   [?c ?a ?l ?l ?  ?p ?r ?i ?n ?t ?_ ?s ?e ?x ?p ?\( ?n ?u ?s ?m ?v ?_ ?s ?t ?d ?e ?r ?r ?, ?  ?\) left])

;; print_node(nusmv_stdout, ...)
(fset 'pno
   [?c ?a ?l ?l ?  ?p ?r ?i ?n ?t ?_ ?n ?o ?d ?e ?\( ?n ?u ?s ?m ?v ?_ ?s ?t ?d ?o ?u ?t ?, ?  ?\) left])

;; print_sexp(nusmv_stderr, ...)
(fset 'pso
   [?c ?a ?l ?l ?  ?p ?r ?i ?n ?t ?_ ?s ?e ?x ?p ?\( ?n ?u ?s ?m ?v ?_ ?s ?t ?d ?o ?u ?t ?, ?  ?\) left])

