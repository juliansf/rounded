BE_C = be/BeFsm.c


PKG_SOURCES = $(PKG_H) $(SEXP_H) $(BDD_H) $(BE_H)  \
							fsmInt.h sexp/sexpInt.h bdd/bddInt.h \
							$(PKG_C) $(SEXP_C) $(BDD_C) $(BE_C) 

